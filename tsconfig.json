{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "strict": false,
    "lib": ["es2015"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "baseUrl": ".",
    "paths": {
      "@functions/*": ["src/functions/*"],
      "@libs/*": ["src/libs/*"],
      "@models/*": ["src/models/*"],
      "@api/*": ["src/api/*"],
    }
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
