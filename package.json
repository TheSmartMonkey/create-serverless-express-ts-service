{
  "name": "cocadeau-api-service",
  "version": "1.0.0",
  "main": "dist/src/server.js",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "clear": "rmdir /s \"dist\"",
    "build": "tsc --build tsconfig.json",
    "start": "cross-env-shell LOCAL='true' npm run build && node -r ts-node/register/transpile-only -r tsconfig-paths/register .",
    "watch": "cross-env-shell LOCAL='true' nodemon",
    "deploy": "sls deploy --verbose",
    "deploy:prod": "cross-env-shell AWS_STAGE=prod STAGE_TYPE=prod sls deploy --verbose",
    "undeploy": "sls remove --verbose",
    "test": "npm run unit && npm run integration",
    "unit": "cross-env-shell NO_LOGS=true jest --group=unit",
    "integration": "cross-env-shell NO_LOGS=true jest --group=integration --maxWorkers=1"
  },
  "dependencies": {
    "aws-sdk": "^2.1282.0",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "pino": "^8.6.1",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@serverless/typescript": "^3.21.0",
    "@types/aws-lambda": "^8.10.106",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.7.20",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "aws-sdk-mock": "^5.8.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.18",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.24.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.12.0",
    "jest": "^29.3.1",
    "jest-runner-groups": "^2.2.0",
    "nodemon": "^2.0.20",
    "serverless": "^3.22.0",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-esbuild": "^1.33.0",
    "serverless-plugin-typescript": "^2.1.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.8.3"
  }
}
